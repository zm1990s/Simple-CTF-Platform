# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=postgresql://ctf_user:ctf_password@localhost:5432/ctf_platform

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Platform Configuration
PLATFORM_NAME=CTF Platform
PLATFORM_LOGO=logo.png

# Admin Account (created on first run)
ADMIN_EMAIL=admin@ctf.local
ADMIN_PASSWORD=admin123

# External Hook Configuration
EXTERNAL_HOOK_ENABLED=false
EXTERNAL_HOOK_URL=https://your-dify-workflow-url.com/hook
